<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical"
    android:layout_marginTop="@dimen/margin10"
    android:paddingEnd="@dimen/width15"
    android:paddingStart="@dimen/width15">

    <!--发货地-->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:visibility="gone">

        <TextView
            android:id="@+id/ui_good_detail_send_city_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:text="发货"
            android:textColor="@color/blackColor4d"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/ui_good_detail_send_city"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginStart="@dimen/width15"
            android:layout_toEndOf="@+id/ui_good_detail_send_city_view"
            android:textColor="@color/blackColor0f"
            android:textSize="12sp" />

        <View
            style="@style/ui_line"
            android:layout_alignParentBottom="true" />
    </RelativeLayout>

    <!--选择:净含量-->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:visibility="visible">

        <TextView
            android:id="@+id/ui_good_detail_suk_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:text="选择"
            android:textColor="@color/blackColor4d"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/ui_good_detail_suk"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginStart="@dimen/width15"
            android:layout_toEndOf="@+id/ui_good_detail_suk_view"
            android:drawableEnd="@mipmap/more_image"
            android:drawablePadding="@dimen/width15"
            android:singleLine="true"
            android:text="净含量"
            android:textColor="@color/blackColor0f"
            android:textSize="12sp" />

        <View
            style="@style/ui_line"
            android:layout_alignParentBottom="true" />
    </RelativeLayout>

    <!--运费-->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="40dp">

        <TextView
            android:id="@+id/ui_good_detail_postage_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:text="运费"
            android:textColor="@color/blackColor4d"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/ui_good_detail_postage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginStart="@dimen/width15"
            android:layout_toEndOf="@+id/ui_good_detail_postage_view"
            android:text="满99元免运费"
            android:textColor="@color/blackColor0f"
            android:textSize="12sp" />

        <View
            style="@style/ui_line"
            android:layout_alignParentBottom="true" />
    </RelativeLayout>


    <!--选择:净含量-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="@color/white"
        android:gravity="center_vertical"
        android:visibility="visible">
        <!--说明-->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="说明"
            android:textColor="@color/blackColor4d"
            android:textSize="12sp" />

        <!--假一赔十-->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/width15"
            android:text="正品保障|不支持7天无理由退货"
            android:textColor="@color/blackColor0f"
            android:textSize="12sp" />

    </LinearLayout>
</LinearLayout>