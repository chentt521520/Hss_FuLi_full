<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/pay_view"
    style="@style/padding_left_right_15"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/bg_bai01"
    android:orientation="vertical"
    android:paddingBottom="@dimen/margin5"
    android:paddingTop="@dimen/margin5">

    <RelativeLayout
        android:id="@+id/wechart_pay_view"
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/wechart_pay_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:src="@mipmap/icon_weixin_rechange" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginStart="12dp"
            android:layout_toEndOf="@+id/wechart_pay_icon"
            android:text="微信支付"
            android:textSize="12sp" />

        <ImageView
            android:id="@+id/wechart_pay_check"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:src="@mipmap/check_box_true" />

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/ali_pay_view"
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:orientation="horizontal">

        <View
            style="@style/ui_line"
            android:layout_alignParentTop="true" />

        <ImageView
            android:id="@+id/ali_pay_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:src="@mipmap/icon_ali_rechange" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginStart="12dp"
            android:layout_toEndOf="@+id/ali_pay_icon"
            android:text="支付宝支付"
            android:textSize="12sp" />

        <ImageView
            android:id="@+id/alipay_pay_check"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:src="@mipmap/check_box_false" />

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/banlence_pay_view"
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:orientation="horizontal">

        <View
            style="@style/ui_line"
            android:layout_alignParentTop="true" />

        <ImageView
            android:id="@+id/banlence_pay_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:src="@mipmap/icon_balance_pay" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginStart="12dp"
            android:layout_toEndOf="@+id/banlence_pay_icon"
            android:text="余额支付"
            android:textSize="12sp" />

        <ImageView
            android:id="@+id/banlence_pay_check"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:src="@mipmap/check_box_false" />

    </RelativeLayout>


    <RelativeLayout
        android:id="@+id/company_pay_view"
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:orientation="horizontal">

        <View
            style="@style/ui_line"
            android:layout_alignParentTop="true" />

        <ImageView
            android:id="@+id/company_pay_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:src="@mipmap/icon_company_pay" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginStart="12dp"
            android:layout_toEndOf="@+id/company_pay_icon"
            android:text="企业支付"
            android:textSize="12sp" />

        <ImageView
            android:id="@+id/company_pay_check"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:src="@mipmap/check_box_false" />

    </RelativeLayout>
</LinearLayout>
