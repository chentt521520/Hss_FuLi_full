<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <TextView
        android:id="@+id/item_company_user_catalog"
        style="@style/_999999_12"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#f0f0f0"
        android:paddingStart="@dimen/width15" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="#ffffff"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/item_company_user_name"
            style="@style/_333333_14"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/width15" />

        <TextView
            android:id="@+id/item_company_user_auth"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/width15"
            android:background="@drawable/bg_all_corner_btn_red"
            android:paddingBottom="@dimen/height1"
            android:paddingEnd="@dimen/margin5"
            android:paddingStart="@dimen/margin5"
            android:paddingTop="@dimen/height1"
            android:textColor="#ffffff"
            android:textSize="9sp" />
    </LinearLayout>
</LinearLayout>