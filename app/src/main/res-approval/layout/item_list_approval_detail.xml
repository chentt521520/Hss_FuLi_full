<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/image"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:src="@mipmap/selected" />

    <RelativeLayout
        style="@style/base_padding_border"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="@dimen/width15"
        android:layout_toEndOf="@+id/image"
        android:background="@mipmap/frame"
        android:paddingStart="@dimen/height40">

        <TextView
            android:id="@+id/leader_position"
            style="@style/_333333_14"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/agree_time"
            style="@style/_666666_12"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true" />

        <TextView
            android:id="@+id/leader_suggest"
            style="@style/_333333_14"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/leader_position"
            android:layout_marginTop="@dimen/width15" />

        <TextView
            android:id="@+id/approval_status"
            style="@style/_666666_12"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/leader_suggest"
            android:layout_alignParentEnd="true" />

    </RelativeLayout>

</RelativeLayout>