<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:paddingBottom="@dimen/margin10"
    android:paddingTop="@dimen/margin10">

    <ImageView
        android:id="@+id/item_icon_task_image"
        android:layout_width="@dimen/height45"
        android:layout_height="@dimen/height45"
        android:layout_centerVertical="true"
        android:src="@mipmap/icon_invite" />

    <TextView
        android:id="@+id/item_icon_task_title"
        style="@style/_333333_14"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/padding8"
        android:layout_toEndOf="@+id/item_icon_task_image" />

    <TextView
        android:id="@+id/item_icon_task_gain"
        style="@style/_999999_12"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/item_icon_task_title"
        android:layout_below="@+id/item_icon_task_title"
        android:layout_marginTop="@dimen/padding8" />

    <TextView
        android:id="@+id/item_icon_task_btn"
        style="@style/_666666_12"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true"
        android:layout_marginStart="@dimen/margin10"
        android:background="@mipmap/button_go"
        android:textColor="#ffffff"
        android:textSize="14sp" />


</RelativeLayout>